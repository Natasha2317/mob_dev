<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fab_margin"
    >
    <LinearLayout
        android:id="@+id/card_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/main_padding"
        android:background="@color/gray"
        android:orientation="vertical"
        android:padding="@dimen/main_padding"
        tools:ignore="MissingConstraints"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/main_padding">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/userpic1"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_text"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:text="@string/date"
                    android:textColor="@color/date_text"
                    android:textSize="14sp"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text"
            android:layout_marginStart="@dimen/main_padding"
            android:layout_marginTop="@dimen/margin_top_item" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_item">

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/gender"
                android:textColor="@color/blue"
                android:gravity="center"
                android:textSize="@dimen/gender_size"
                android:layout_marginStart="@dimen/main_padding"
                app:layout_constraintStart_toStartOf="parent"
                android:textAllCaps="true"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/like"
                android:layout_width="@dimen/like_size"
                android:layout_height="@dimen/like_size"
                android:background="@drawable/like"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>